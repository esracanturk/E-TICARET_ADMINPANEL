@model TicaretMVC.Models.ProductsWithStore
@{
    ViewData["Title"] = "DetailProduct";
    Layout = "~/Views/Shared/_MenuLayout.cshtml";
}

<!DOCTYPE html>
<html>
<br />
<head>
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 50%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(odd) {
            background-color: #dddddd;
        }
    </style>
</head>
<body>

    <table>
        <tr>
            <th>ID</th>
            <th>Ürün Adı</th>
            <th>Ürün Miktarı</th>
            <th>Ürün Fiyatı</th>
            <th>Ürün Açıklaması</th>
            <th>Ürün Fotoğrafı</th>
            <th>Ürün Mağaza Bilgisi</th>
        </tr>
        <tr>
            <th>@Model.Id</th>
            <td>@Model.Name</td>
            <td>@Model.Quantity</td>
            <td>@Model.Price</td>
            <td>@Model.Description</td>
            @*<td>@Model.ImageUrl</td>*@
            <td class="invert-image"><a href="single.html"><img src="@Model.ImageUrl" alt="@Model.ImageUrl" style="width: 100px;" class="img-responsive"></a></td>

            @*<td>@Model.groupid</td>*@
            <td>@Model.groupname</td>
        </tr>
    </table>
    <br />
    <a href="/Products/BackPage/" class="btn btn-danger" style="position:absolute; top:230px; right: 815px">Geri</a>
</body>
</html>

