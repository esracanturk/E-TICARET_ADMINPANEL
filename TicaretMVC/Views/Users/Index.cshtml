@using TicaretMVC.Models
@model List<Users>
@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MenuLayout.cshtml";
}
<br />
<h3>HOŞGELDİNİZ, @Context.Session.GetString("username")</h3>
